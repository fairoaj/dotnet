@model TestApplication.Models.productTable

@{
    ViewBag.Title = "deleteProduct";
}

<div class="container">
    <div class="row centered-form">
        <div class="col-xs-4 col-sm-4 col-md-4 col-sm-offset-2 col-md-offset-4">
            <div style="margin-top:60px" class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Edit Data</h3>
                </div>
                <div class="panel-body">
                    <form role="form" action="@Url.Action("deleteData","Home")" method="post">
                        @Html.AntiForgeryToken()
                        <input name="id" value="@Model.productid" hidden>
                      
                        <div class="form-group">
                            <label>Product Name</label><p> @Model.productname </p>
                          
                        </div>

                        <div class="form-group">
                            <label>Customer Name</label><p>@Model.customername</p>
                        </div>

                        <div class="form-group">
                            <label>Selling Unit</label><p>@Model.sellingunit</p>
                        </div>

                        <div class="form-group">
                            <label>Unit Cost</label><p>@Model.unitcost</p>
                        </div>

                        <div class="form-group">
                            <label>Total Cost</label><p>@Model.totalcost</p>
                        </div>

                        <input type="submit" value="Delete Product" class="btn btn-info btn-block">
                        <button style="margin-top:20px" class="btn"><a href="@Url.Action("About","Home")">Back</a></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


