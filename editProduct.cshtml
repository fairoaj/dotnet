@model TestApplication.Models.productTable

@{
    ViewBag.Title = "editProduct";
}

<div class="container">
<div class="row centered-form">
    <div class="col-xs-4 col-sm-4 col-md-4 col-sm-offset-2 col-md-offset-4">
        <div style="margin-top:60px" class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Edit Data</h3>
            </div>
            <div class="panel-body">
                <form role="form" action="@Url.Action("editData","Home")" method="post">
                   @Html.AntiForgeryToken()
                    @Html.HiddenFor(m=>m.productid)
                    <div class="form-group">
                        <label>Product Name</label>
                        @Html.TextBoxFor(m => m.productname, new { placeholder = "product Name", @class = "form-control input-sm" })
                    </div>

                    <div class="form-group">
                        <label>Customer Name</label>
                        @Html.TextBoxFor(m => m.customername, new { placeholder = "customer name", @class = "form-control input-sm" })
                    </div>

                    <div class="form-group">
                        <label>Selling Unit</label>
                        @Html.TextBoxFor(m => m.sellingunit, new { placeholder = "selling unit", @class = "form-control input-sm" })
                    </div>

                    <div class="form-group">
                        <label>Unit Cost</label>
                        @Html.TextBoxFor(m => m.unitcost, new { placeholder = "unit cost", @class = "form-control input-sm" })
                    </div>

                    <div class="form-group">
                        <label>Total Cost</label>
                        @Html.TextBoxFor(m => m.totalcost, new { placeholder = "total cost", @class = "form-control input-sm" })
                    </div>

                    <input type="submit" value="Edit Product" class="btn btn-info btn-block">
                    <button style="margin-top:20px" class="btn"><a href="@Url.Action("About","Home")">Back</a></button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>



